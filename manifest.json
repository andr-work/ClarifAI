{
    "name": "ClarifAI",
    "version": "0.1",
    "manifest_version": 3,
    "description": "Chrome extension that explains unfamiliar words, phrases, and text in simple terms, in the same language.",
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["storage", "contextMenus"],
    "host_permissions": ["http://*/*", "https://*/*"],
    "side_panel": {
        "default_path": "sidepanel/index.html"
    },
    "action": {
        "default_icon": {
            "16": "images/icon16.png",
            "32": "images/icon32.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        },
        "default_title": "explain words and phrases in simple terms, in the same language.",
        "default_popup": "dialogbox/index.html"
    }
}
